{
  "compilerOptions": {
      "lib": [
          "ES2023"
      ],
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "strictNullChecks":false
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.mts"
  ],
  "exclude": [
      "node_modules"
  ]

}
